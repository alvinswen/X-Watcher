# MiniMax API 配置
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_BASE_URL=https://api.minimaxi.com

# X 平台 API 配置
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_BASE_URL=https://api.twitterapi.io/twitter

# 抓取器配置
SCRAPER_ENABLED=true
SCRAPER_INTERVAL=43200
SCRAPER_USERNAMES=user1,user2,user3
SCRAPER_LIMIT=100

# 数据库配置
DATABASE_URL=sqlite:///./news_agent.db

# OpenRouter API 配置（可选，作为备选 LLM 提供商）
# OPENROUTER_API_KEY=your_openrouter_api_key_here
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Prometheus 监控（可选）
PROMETHEUS_ENABLED=true

# 管理员 API 配置（可选，用于管理员 API 认证）
ADMIN_API_KEY=your_admin_api_key_here

# JWT 认证配置
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_EXPIRE_HOURS=24

# 自动摘要配置
AUTO_SUMMARIZATION_ENABLED=true
AUTO_SUMMARIZATION_WAIT_FOR_COMPLETION=false
AUTO_SUMMARIZATION_BATCH_SIZE=50

# Feed API 配置
FEED_MAX_TWEETS=200
